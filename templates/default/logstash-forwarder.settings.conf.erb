{
  "network": {
    "servers": <%= node["logstash-forwarder"]["hosts"].inspect %>,
    "ssl certificate": "<%= node["logstash-forwarder"]["ssl_certificate"] %>",
    "ssl ca": "<%= node["logstash-forwarder"]["ssl_ca"] %>",
    "ssl key": "<%= node["logstash-forwarder"]["ssl_key"] %>",
    "timeout": <%= node["logstash-forwarder"]["timeout"] %>
  },
  "files": [
    <% node["logstash-forwarder"]["files"].each do |type, paths| %>
      {
        "paths": <%= paths.inspect %>,
        "fields": { "type": "<%= type %>" }
      }
    <% end %>
  ]
}

